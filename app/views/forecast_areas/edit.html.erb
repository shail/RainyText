<h1>Update your Forecast Area</h1>
<div class="row">
  <div class="span6 offset3">
<%= form_for @forecast_area do |f| %>
	<%= f.label :zipcode %>
	<%= f.text_field :zipcode %>

	<%= f.label :phone_number %>
	<%= f.phone_field :phone_number %>

	<%= f.label :scheduled_time %>
	<%= f.time_select(:time, :order => [:hour, :minute]) %>
<br />
<%= f.submit "Update forecast area", :class => "btn btn-primary" %>
<% end %>
	</div>
</div>