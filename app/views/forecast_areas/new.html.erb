<%= form_for @forecast_area do |f| %>
	<%= f.label :zipcode %>
	<%= f.text_field :zipcode %>

	<%= f.label :phone_number %>
	<%= f.phone_field :phone_number %>

	<%= f.label :scheduled_time %>
	<%= f.time_select(:time, :order => [:hour, :minute]) %>
<br />
<%= f.submit "Add forecast area" %>
<% end %>