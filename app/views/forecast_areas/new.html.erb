<h1>Create your new Forecast Area</h1>
<div class="row">
  <div class="span6 offset3">
<%= form_for @forecast_area do |f| %>
	<%= f.label :zipcode %>
	<%= f.text_field :zipcode %>

	<%= f.label :phone_number %>
	<%= f.phone_field :phone_number %>

	<%= f.label :time %>
	<%= f.select :time, [['6:00 AM'], ['7:00 AM'], ['8:00 AM']] %>

	<%= f.label :time_zone %>
	<%= f.collection_select :forecast_time_zone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>
	
<br />
<%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>
</div>
</div>