<h1>Create your new Forecast Area</h1>
<div class="row">
  <div class="span6 offset3">
<%= form_for @forecast_area do |f| %>
	<%= f.label :zipcode, "Zip Code" %>
	<%= f.text_field :zipcode %>

	<%= f.label :phone_number, "Phone Number" %> 
	<%= f.phone_field :phone_number %>

	<%= f.label :time, "Delivery Time" %>
	<%= f.select :time, [['6:00 AM'], ['7:00 AM'], ['8:00 AM']] %>

	<%= f.label :forecast_time_zone %>
	<%= f.select :forecast_time_zone, [['Pacific'], ['Mountain'], ['Central'], ['Eastern']] %>
	
<br />
<%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>
</div>
</div>

<%= javascript_include_tag "tooltips.js" %>
<script>
$("#forecast_area_zipcode").tooltip({title: 'e.g. 03862', placement: 'right', trigger: 'focus'});
$("#forecast_area_phone_number").tooltip({title: 'e.g 6504218549', placement: 'right', trigger: 'focus'})
</script>
